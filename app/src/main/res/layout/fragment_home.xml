<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/current_location_fragment"
    tools:context="cheerfulbutter.unfiltered.home">

    <LinearLayout
        android:backgroundTint="@color/colorPrimary"
        android:background="@drawable/water"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/archivo_black"
            android:gravity="center_horizontal"
            android:text="5,363 WATER SYSTEMS FAILED TO MEET FEDERAL STANDARDS AFTER TESTING FOR CONTAMINANTS"
            android:textSize="30sp"
            android:textColor="#ffff"/>
        <TextView
            android:textColor="#ffff"
            android:gravity="center_horizontal"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(SAFE DRINKING WATER ACT OF 1974)"/>

        <TextView
            android:textColor="#ffff"
            android:paddingTop="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/archivo_black"
            android:gravity="center_horizontal"
            android:text="HOW LONG SINCE THEY TESTED YOURS?"
            android:textSize="25sp" />

        <TextView
            android:textColor="#ffff"
            android:layout_marginTop="25sp"
            android:paddingTop="5sp"
            android:paddingBottom="5sp"
            android:paddingHorizontal="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/archivo_black"
            android:text="FIND OUT"
            android:textSize="20sp"
            android:background="@color/colorPrimaryDark"/>
    >
    </LinearLayout>

</FrameLayout>
